{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    "fs:read-all",
    "fs:read-dirs",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    "store:default"
  ]
}