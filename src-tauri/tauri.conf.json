{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "fileexplorer",
    "version": "1.0.0",
    "identifier": "com.fileexplorer.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
        {
            "title": "fileexplorer",
            "width": 1430,
            "height": 950,
            "dragDropEnabled": true,
            "transparent": false,
            "backgroundColor": "FFFFFF",
            "center": true,
            "focus": true,
            "visible": true,
            "fullscreen": false,
            "resizable": true,
            "zoomHotkeysEnabled": true,
            "titleBarStyle": "Transparent"
        }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": ["C:/**", "**"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
        ],
        "resources": [
            
        ]
    }
}
